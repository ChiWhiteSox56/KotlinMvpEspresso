<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_item_margin"
    android:padding="@dimen/default_item_padding"
    android:id="@+id/rl_item_container">
    <!-- Repository Name -->
    <TextView
        android:id="@+id/tv_repository_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!-- Repository Description -->
    <TextView
        android:id="@+id/tv_repository_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repository_name"/>

    <!-- Repository Update time -->
    <TextView
        android:id="@+id/tv_repository_updated_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_repository_description" />
</RelativeLayout>